<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>controller.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>H3NewServlet</servlet-name>
        <servlet-class>controller.H3NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoiTienNewServlet</servlet-name>
        <servlet-class>controller.DoiTienNewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/new</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>H3NewServlet</servlet-name>
        <url-pattern>/h3</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>usd</param-name>
        <param-value>23000</param-value>
    </context-param>
    <context-param>
        <param-name>yen</param-name>
        <param-value>121</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>DoiTienNewServlet</servlet-name>
        <url-pattern>/doitien</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
